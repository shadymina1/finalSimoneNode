extends layout

block content
  hr.landing-hr
  .container.landing-content(style='min-height: 20em; margin-bottom: 2em;')
    h2
      | Step 1 
      br
      |  Please fill the belwo form:
    br
    form.container.form-login(action='./enroll2' method='post')
      .container.credentials
        label(for='email') Your email:
        br
        input.login-input(required='' type='email' name='email' id='' placeholder='Enter your email')
        br
        label(for='pass') Your password:
        br
        input.login-input(required='' type='password' name='pass' placeholder='Enter your password' id='')
        br
        label(for='pass') Your password again:
        br
        input.login-input(required='' type='password' name='rpass' placeholder='Retupe your password' id='')
        br
        label(for='pass') Student first name:
        br
        input.login-input(required='' type='text' name='loged_pass' placeholder='Enter Student First Name' id='')
        br
        label(for='pass') Student last name:
        br
        input.login-input(required='' type='text' name='loged_pass' placeholder='Enter Student Last Name' id='')
        br
        label(for='grades') Choose grade:
        br
        select#browsers.login-input(name='grades')
          option.login-input(value='a') Grade 1 to 3
          option.login-input(value='b') Grade 4 to 6
          option.login-input(value='c') Grade 7 to 9
        br
        .form-check
          label.form-check-label(for='flexCheckDefault')
            input#flexCheckDefault(type='checkbox' value='' onchange="isChecked(this, 'sub1')")
            |  I agree to receive essential correspondence like:  confirmation email, teacher feedback, student absences and makeup class alert
        button#sub1.btn.btn-info.login-input-btn(type='submit' disabled='disabled')  Submit
        br
  div(style='min-height: 6em;')  
 
   
